<h1>Destinations</h1>

<table class='table'>
  <thead>
    <tr>
      <th>City</th>
      <th>Country</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3">Config</th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.city %></td>
        <td><%= destination.country %></td>
        <td><%= destination.latitude %></td>
        <td><%= destination.longitude %></td>
        <td><%= link_to 'Show', destination, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', destination, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Destination', new_destination_path %>
